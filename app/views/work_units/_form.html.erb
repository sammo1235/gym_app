<%= form_with(model: work_unit, local: true) do |form| %>
  <% if work_unit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(work_unit.errors.count, "error") %> prohibited this work_unit from being saved:</h2>

      <ul>
      <% work_unit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :lift %>
    <%= form.select :lift, 
    options_from_collection_for_select(Lift.order(:name), :id, :name,
    @work_unit.lift.try(:id)), include_blank: true %>
  </div>
  
  <div class="field">
    <%= form.label :weight %>
    <%= form.number_field :weight %>
  </div>

  <div class="field">
    <%= form.label :reps %>
    <%= form.number_field :reps %>
  </div>

  <div class="field">
    <%= form.hidden_field :user, value: @user.id %>
  </div>

  <div class="field">
    <%= form.hidden_field :work_out, value: @work_out.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
